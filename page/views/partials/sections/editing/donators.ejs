<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <h2>Donate</h2>
        <table class="table table-inverse">
            <thead>
              <tr>
                <th>Name</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% donators.forEach(donator =>{%>
                <tr>
                  <form method="post" action="/donator" class="form-group">
                    <input hidden name="id" type="number" value="<%= donator.id %>">
                    <th scope="row"><input type="text" class="form-control" name="name" required value="<%= donator.name %>"/></th>
                    <td><button class="btn btn-default btn-lg" type="submit">Save</button></td>
                  </form>
                  <form method="post" action="/delete/donator">
                    <input hidden name="id" type="number" value="<%= donator.id %>">
                    <td><button class="btn btn-red btn-lg" type="submit">Delete</button></td>
                  </form>
                </tr>
              <% }) %>
              <hr/>
              <tr>
                <form method="post" class="form-group" action="/donator">
                  <input hidden name="id" value="-1">
                  <th scope="row"><input type="text" class="form-control" name="name" required placeholder="Name"/></th>
                  <td><button class="btn btn-default btn-lg" type="submit">Save New</button></td>
                </form>
              </tr>
          </tbody>
        </table>
    </div>
</div>