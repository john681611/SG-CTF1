<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <h2>Servers</h2>
        <% servers.forEach(server => { %>                
                <h3><%= server.name %></h3>
                <% Object.keys(server.mods).forEach(key => { %>
                    <h4><%= key%></h4>
                    <table class="table table-inverse">
                    <thead>
                        <tr>
                        <th>Mod</th>
                        <th>SteamID</th>
                        <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% server.mods[key].forEach(mod =>  {%>
                        <tr>
                        <th scope="row"><%= mod.name %></th>
                        <td><%= mod.steamID %></td>
                        <td></td>
                        </tr>
                        <% }) %>
                    </tbody>
                    </table>
                    <hr />
                <% }) %>
                <hr />
        <% }) %>
        
        <a class="btn btn-default btn-lg" href="/serverFile" download="INF_Servers.json">Download Servers Config</a><br>
        <form method="POST" action="/serverFile" class="form-group">
            <textarea name="json" class="form-control"required rows="50" cols="80" placeholder="Server JSON Here" ><%- JSON.stringify(servers, null, 4) %></textarea><br>
            <button class="btn btn-default btn-lg" type="submit">save</button>
        </form>
    </div>
</div>